<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/our_vision_background"
    android:orientation="horizontal">

    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- text container -->
    <LinearLayout
        android:id="@+id/vision_container"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">



        <TextView
            android:id="@+id/vision_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="@string/our_vision_label"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/vision_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="@string/vision_description"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/stay_in_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="@string/stay_in_touch"
            android:textColor="@color/white"
            android:textSize="30sp"
             />

        <TextView
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="@string/contact_details"
            android:textColor="@color/white"
            android:textSize="20sp"
             />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <!-- image container -->
    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">


        <!-- stars container -->
        <LinearLayout
            android:id="@+id/stars_container"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vision_container"
            android:layoutDirection="ltr">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:rotation="-20"
                app:srcCompat="@drawable/star" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:rotation="20"
                app:srcCompat="@drawable/star" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr">


                <!-- Lady Sushi -->
                <ImageView
                    android:id="@+id/lady_sushi"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lady_vision"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/left_eye_lady_sushi"
                    android:layout_width="52dp"
                    android:layout_height="49dp"
                    android:layout_marginBottom="244dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sushi_left_eye"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.42"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/right_eye_lady_sushi"
                    android:layout_width="54dp"
                    android:layout_height="53dp"
                    android:layout_marginBottom="244dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sushi_right_eye"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0.689"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>