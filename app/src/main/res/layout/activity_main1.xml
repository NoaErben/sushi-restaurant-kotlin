<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1"
    android:background="@drawable/loading_background">

    <TextView
        android:id="@+id/sakura_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="Sakura"
        android:textColor="@color/white"
        android:textSize="43sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/nigiri_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/nigiri_icon"
        app:layout_constraintBottom_toBottomOf="@id/sakura_restaurant"
        app:layout_constraintEnd_toEndOf="@id/sakura_restaurant"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="@id/sakura_restaurant"
        app:layout_constraintTop_toTopOf="@id/sakura_restaurant"
        app:layout_constraintVertical_bias="0.878" />

</androidx.constraintlayout.widget.ConstraintLayout>
